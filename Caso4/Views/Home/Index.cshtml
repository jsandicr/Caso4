@{
    ViewBag.Title = "Home Page";
}

<div>
    <h1 class="text-center">Consulta</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Código Compra</th>
                <th scope="col">Descripción</th>
                <th scope="col">Precio</th>
                <th scope="col">Saldo</th>
                <th scope="col">Estado</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>

            @if (@ViewBag.Cobros != null)
            {
                foreach (Caso4.Models.Objetos.CobroObj cobro in ViewBag.Cobros)
                {
                    <tr>
                        <td>@cobro.IdCompra</td>
                        <td>@cobro.Descripcion</td>
                        <td>@cobro.Precio</td>
                        <td>@cobro.Saldo</td>
                        <td>@cobro.Estado</td>
                        <td>
                            @Html.ActionLink("Abonar ", "Abono", "Home", new { id = cobro.IdCompra }, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr></tr>
            }
        </tbody>
    </table>
</div>